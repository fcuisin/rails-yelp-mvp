<nav class="navbar navbar-light bg-dark">
  <span class="navbar-brand mb-0 h1 text-light"><%= @restaurant.name %></span>
  <%= link_to 'Back to restaurant page',  restaurant_path(@restaurant), class: "btn btn-outline-primary" %>
</nav>

<div class="my-4">
  <%= simple_form_for([@restaurant, @review]) do |f| %>

      <%= f.input :content %>
      <%= f.input :rating, collection: Review::RATINGS %>

      <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
</div>
