<nav class="navbar navbar-light bg-dark d-flex justify-content-end">
  <span class="navbar-brand mb-0 h1 text-light"><%= @restaurant.name %></span>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-outline-primary my-2 mx-2" %>
  <%= link_to "Back to restaurant list", restaurants_path, class: "btn btn-outline-primary" %>
</nav>

<div class="py-5">
  <h2>Informations</h2>
  <li class="list-group-item"><%= @restaurant.address %></li>
  <li class="list-group-item">Category: <%= @restaurant.category %></li>
</div>

<h2>Reviews:</h2>

<div>
<ul class="list-group list-group-flush">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      Comment: <%= review.content %>
      ***Rating***: <%= review.rating %>
    </li>
  <% end %>
</ul>
</div>
